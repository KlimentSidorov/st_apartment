};

const internet = {
  title: "Интернет",
  text: "WiFi е достапна во сите области и е бесплатна.",
};

const pets = {
  title: "Домашни миленици",
  text: "Домашни миленици се дозволени на барање. Може да се применуваат трошоци.",
};

const kitchen = {
  title: "Кујна",
  data: [
    "Трпезариска маса",
    "Печка",
    "Кујнски прибор",
    "Електричен котел",
    "Машина за перење",
    "Фрижидер",
  ],
};

const amenities = {
  title: "Удобности во собите",
  data: [
    "Кауч",
    "Регал за сушење облека",
    "Полица за облека",
    "Тврдо дрво или паркет подови",
    "Звучна изолација",
    "Се за Пеглање",
